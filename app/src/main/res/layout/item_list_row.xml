<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/base_grid_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/itemListImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/list_bottom_nav" />

        <TextView
            android:id="@+id/itemListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/double_base_grid_size"
            android:textSize="18sp"
            tools:text="Test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="right|center_horizontal">

        <CheckBox
            android:id="@+id/itemListCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>